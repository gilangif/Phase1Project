<%- include('header') %>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:450px;margin-right:40px">

    <% if (errors) { %>
        <div class="alert alert-danger" role="alert">
            <% errors.split(";").forEach((item) => { %>
                <li><%= item %></li>
            <% }) %>
        </div>
    <% } %>

    <section>
      <form action="/posts/edit/<%= detailpost.id %>" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Title: </label>
          <input name="title" type="text" class="form-control" id="title" aria-describedby="title"
            value="<%= detailpost.title %>">
          <small id="title" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
          <label for="description">Post:</label><br>
          <textarea id="description" name="post" style="width: 100%; height: 300px;"><%= detailpost.post %></textarea><br>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Image:</label>
          <input name="img" type="text" class="form-control" id="img" value="<%= detailpost.img %>">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Tag: </label>
          <select class="form-control" name="tag" id="exampleFormControlSelect1" placeholder="Choose">
            <% data.forEach(el=>{ %>
              <% if (el.id) { %>

                <% } %>
                  <option value="<%= el.id %>" <%=el.id===detailtag.id ? "selected" : "" %>> <%= el.name %>
                  </option>
                  <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>


    </section>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</html>