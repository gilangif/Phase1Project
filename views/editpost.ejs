<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Add Post</title>
</head>
<body>
    <%- include('./navbar') %>


    <section>              
        <form action="/posts/edit/<%= detailpost.id %>" method="post">
            <div class="form-group">
              <label for="exampleInputEmail1">Title: </label>
              <input name="title" type="text" class="form-control" id="title" aria-describedby="title" value="<%= detailpost.title %>">
              <small id="title" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label for="description">Post:</label><br>
                <textarea  id="description"  name="post" rows="4"  > <%= detailpost.post %>  </textarea><br>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Image:</label>
                <input name="img" type="text" class="form-control" id="img" value="<%= detailpost.img %>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Tag: </label>
                <select class="form-control" name="tag" id="exampleFormControlSelect1" placeholder="Choose">
                        <% data.forEach(el=>{ %>
                        <option  value="<%= el.id %>" <%= el.id === detailtag.id ? "selected": "" %>> <%= el.name %></option>
                        <% }) %>
                    </select>
                </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          
    </section>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>