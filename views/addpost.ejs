<%- include('header') %>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:450px;margin-right:40px">

    <% if (errors) { %>
        <div class="alert alert-danger" role="alert">
            <% errors.split(";").forEach((item) => { %>
                <li><%= item %></li>
            <% }) %>
        </div>
    <% } %>

    <form action="/posts/add" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="exampleInputEmail1">Title: </label>
          <input name="title" type="text" class="form-control" id="title" aria-describedby="title" placeholder="title">
          <small id="title" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="description">Post:</label><br>
            <textarea id="description" name="post" style="width: 100%; height: 300px;" ></textarea><br>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Image:</label>
            <input name="avatar" type="file" class="form-control" id="img" placeholder="link Image">
        </div>
        
        <div class="form-group">
            <label for="exampleInputPassword1">Tag: </label>
            <select class="form-control" name="tag" id="exampleFormControlSelect1" placeholder="Choose">
                    <% data.forEach(el=>{ %>
                    <option selected value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                </select>
            </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>